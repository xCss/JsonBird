#!/usr/bin/env node

/**
 * Module dependencies.
 */
process.env.TZ = 'Asia/Shanghai';

var app = require('../app');
var debug = require('debug')('API:server');
var http = require('http');
//var cluster = require('cluster');
//var cpus = require('os').cpus().length;

